{{> navbar}}

<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  
  {{#if workorders.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each workorders as |workorders|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/workorder/{{workorder.id}}">{{workorder.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{workorder.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{> footer}}

<script src="./public/js/profile.js"></script>
